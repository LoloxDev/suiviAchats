{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdProd</th>
                <th>IdCat</th>
                <th>ManuelProd</th>
                <th>InfosProd</th>
                <th>EffaceProd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.idProd }}</td>
                <td>{{ produit.idCat }}</td>
                <td>{{ produit.manuelProd }}</td>
                <td>{{ produit.infosProd }}</td>
                <td>{{ produit.effaceProd ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_produits_show', {'idProd': produit.idProd}) }}">show</a>
                    <a href="{{ path('app_produits_edit', {'idProd': produit.idProd}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produits_new') }}">Create new</a>
{% endblock %}
